#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../_postcss-cli@8.3.1@postcss-cli/bin/postcss" "$@"
  ret=$?
else 
  node  "$basedir/../_postcss-cli@8.3.1@postcss-cli/bin/postcss" "$@"
  ret=$?
fi
exit $ret
